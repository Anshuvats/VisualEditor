{
	"extends": [
		"wikimedia",
		"plugin:qunit/recommended",
		"plugin:qunit/two"
	],
	"env": {
		"browser": true,
		"jquery": true,
		"qunit": true
	},
	"globals": {
		"ve": true,
		"VisualEditorSupportCheck": false,
		"OO": false,
		"unicodeJS": false,
		"RangeFix": false,
		"Papa": false
	},
	"rules": {
		"qunit/no-async-in-loops": 0,
		"qunit/no-global-stop-start": 0,
		"qunit/no-ok-equality": 0,
		"qunit/require-expect": 0,
		"qunit/resolve-async": 0,
		"dot-notation": [ "error", { "allowKeywords": true } ]
	},
	"plugins": [ "html", "qunit" ],
	"settings": {
		"html/indent": "+tab"
	}
}
